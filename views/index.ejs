<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Telegram Bot Images</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f4f4f4;
    }
    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .card {
      background: white;
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      width: 300px;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card img {
      width: 100%;
      height: auto;
      border-radius: 5px;
    }
    .buttons {
      margin-top: 10px;
    }
    .buttons button {
      margin: 5px;
      padding: 8px 12px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    .view {
      background-color: #007bff;
      color: white;
    }
    .share {
      background-color: #28a745;
      color: white;
    }
    .download {
      background-color: #ffc107;
      color: white;
    }
  </style>
</head>
<body>
  <h1>Telegram Bot Images</h1>
  <div class="container">
    <% images.forEach((image) => { %>
      <div class="card">
        <img src="<%= image %>" alt="Telegram Bot Image">
        <div class="buttons">
          <button class="view" onclick="window.open('<%= image %>', '_blank')">View</button>
          <a href="<%= image %>" download class="download"><button class="download">Download</button></a>
        </div>
      </div>
    <% }); %>
  </div>

  <script>
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(() => {
        alert('Link copied to clipboard!');
      });
    }
  </script>
</body>
</html>
